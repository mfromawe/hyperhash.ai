{
  "name": "hyperhash.ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && prisma db push && next build",
    "start": "next start",
    "lint": "next lint",
    "analyze": "ANALYZE=true npm run build",
    "postinstall": "prisma generate",
    "vercel-build": "node scripts/vercel-build.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:setup": "node scripts/db-setup.js",
    "blog:generate": "tsx scripts/seo-gen.ts",
    "blog:weekly": "tsx scripts/blog-automation.ts weekly",
    "blog:topic": "tsx scripts/blog-automation.ts topic",
    "lighthouse": "lhci autorun",
    "seo:check": "tsx scripts/seo-checker.ts",
    "performance": "npm run build && npm run lighthouse",
    "security:audit": "npm audit --audit-level moderate",
    "test:build": "npm run build && npm run start & sleep 5 && curl http://localhost:3000 && pkill -f 'next start'"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@next/bundle-analyzer": "^15.4.5",
    "@prisma/client": "^6.13.0",
